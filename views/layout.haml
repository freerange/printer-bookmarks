!!! 5

%html
  %head
    %link{:rel => "stylesheet", :href => "http://printer.gofreerange.com/stylesheets/print.css", :type => "text/css", :media => "screen", :charset => "utf-8"}
    :css
      #bookmark {
        border: 2px solid #000;
        padding: 10px;
      }
      hr {
        border-width: 2px;
      }
      label {
        font-weight: bold;
      }
      input[type=text] {
        width: 370px;
      }
      .hint {
        font-size: 90%;
        color: #444;
      }
      #notes {
        min-height: 500px;
      }
      #cover-and-info {
        overflow: auto;
      }
      #cover-container, #info-container {
        width: 50%;
        float: left;
      }
      #cover-image {
        width: 100%;
      }
      #bookmark h1 {
        margin-top: 0;
      }
      #info-container h3 {
        margin-top: 0;
        margin-bottom: 100px;
        margin-left: 20px;
      }
  %body.preview
    .paper
      .content
        = yield